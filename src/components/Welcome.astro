---
import SectionMapa from "./paginasComponents/sectionMapa.astro";
---

<div id="container">
  <!-- Incluimos el Header con sus elementos interactivos -->

  <!-- Sección 1: Imagen de fondo y texto -->
  <section class="relative w-full h-auto grid grid-cols-12">
    <!-- Columna Izquierda: Texto y botón (z-40) -->
    <div class="col-span-5 flex flex-col justify-center items-start px-16 bg-[#71af8d] relative max-sm:col-span-12 max-sm:items-center max-sm:px-6 max-sm:py-24">
      <div class="absolute top-[55%] left-[80%] transform -translate-x-1/2 z-40 max-sm:relative max-sm:top-10 max-sm:-left-[10%] max-sm:translate-x-0 ">
        <h1 class="titulo-home text-6xl font-black text-white leading-tight max-sm:text-4xl">
          I am <br>
          <em class="italic font-medium">because</em> <br>
          we are
        </h1>        
      </div>
      <!-- Botón para móvil, posicionado en la esquina inferior derecha de la sección verde -->
      <button class="max-sm:absolute max-sm:bottom-4 max-sm:right-4 flex items-center gap-3 px-2 md:px-6 py-1 md:py-3 bg-[#1e804b] text-white rounded-full shadow-lg transition z-40 block sm:hidden">
        <img src="/images/ico-admisiones.svg" alt="Ver Admisiones" width="32" height="32">
        ADMISIONES
      </button>
    </div>
    
    <!-- Columna Derecha: Imagen de fondo y botón (z-40) -->
    <div class="col-span-7 relative w-full h-full max-sm:col-span-12">
      <img
        src="/images/fondo-home.webp"
        alt="Imagen de fondo"
        class="w-full h-full object-cover"
      />
      <button class="absolute bottom-6 right-6 flex items-center gap-3 px-6 py-3 bg-[#1e804b] text-white rounded-full shadow-lg transition z-40 hidden sm:flex">
        <img src="/images/ico-admisiones.svg" alt="Ver Admisiones" width="32" height="32"> 
        ADMISIONES
      </button>
    </div>
    
    <!-- Figura decorativa -->
    <img
      src="/images/formas/forma-home-1.svg"
      alt="Forma decorativa"
      class="absolute top-0 left-4/12 transform -translate-x-1/2 h-full pointer-events-none max-sm:w-3/4 max-sm:-top-35 max-sm:left-40 max-sm:-translate-x-1/2"
    />
  </section>
  

  

  <!-- Sección 2: Bienvenida -->
  <section class="relative w-full h-auto py-10 bg-white">
    <div class="grid grid-cols-12 gap-8 max-w-screen-xl mx-auto">
      <!-- Columna Izquierda: Texto en recuadro (z-20) -->
      <div class="col-span-4 relative flex flex-col justify-center max-sm:col-span-12">
        <div class="bg-white shadow-xl rounded-xl p-8 absolute top-10 left-[55%] w-[450px] z-20 max-sm:relative max-sm:top-35 max-sm:left-0 max-sm:w-[90%] max-sm:mx-auto">
          <h2 class="text-2xl font-bold text-gray-900 text-center">
            BIENVENIDOS A SAN ISIDRO
          </h2>
          <p class="mt-4 text-gray-700 leading-relaxed">
            Somos conscientes de que, probablemente, una de las decisiones más importantes
            a la que como padres se enfrentan, es la elección de un Colegio para sus hijos,
            instancia que generará gran impacto en sus vidas. Por ello, es vital tomar la
            decisión correcta.
          </p>
        </div>
        <!-- Línea decorativa -->
        <div class="absolute -top-5 -left-60 w-[550px] max-sm:absolute max-sm:top-0 max-sm:left-1/2 max-sm:-translate-x-1/2 max-sm:w-[600px]">
          <img
            src="/images/formas/forma-home-2.svg"
            alt="Decoración"
            class="w-full h-full"
          />
        </div>
      </div>
  
      <!-- Columna Derecha: Imagen -->
      <div class="col-span-8 max-sm:col-span-12 z-10">
        <img
          src="/images/fondo-bienvenida.webp"
          alt="Imagen del colegio"
          class="w-full h-auto rounded-xl shadow-lg"
        />
      </div>
    </div>
  </section>
  

  <section class="relative w-full  bg-[#71af8d] py-10">
    <!-- Forma decorativa detrás (z-0) -->
    <img
      src="/images/formas/forma-home-3.svg"
      alt="Forma decorativa"
      class="absolute top-25 md:-top-5 -right-15 w-[1000px] md:w-[750px] z-10"
    />
  
    <!-- Contenedor general -->
    <div class="relative max-w-screen-xl mx-auto h-full px-4">
      <!-- 
        =======================
        ESCRITORIO
        =======================
        Se muestra en pantallas >= sm
        Se oculta en móvil con: hidden max-sm:hidden
      -->
      <div class="hidden sm:grid grid-cols-12 gap-8 h-full relative">
        <!-- Iconos en posición absoluta (arriba de la imagen) -->
        <div class="absolute col-span-4 flex items-center justify-center z-20 top-[65%] left-[12%] lg:gap-30 md:gap-20 w-full">
          <img
            src="/images/icons/ico-alumnos.svg"
            alt="Alumnos"
            width="150"
            height="150"
          />
          <img
            src="/images/icons/ico-hectarias.svg"
            alt="Hectáreas"
            width="150"
            height="150"
          />
          <img
            src="/images/icons/ico-m3-construidos.svg"
            alt="M3 Construidos"
            width="150"
            height="150"
          />
          <img
            src="/images/icons/ico-alumnos-extranjeros.svg"
            alt="Alumnos Extranjeros"
            width="150"
            height="150"
          />
          <img
            src="/images/icons/ico-certificados-internacionales.svg"
            alt="Certificados Internacionales"
            width="150"
            height="150"
          />
        </div>
        <!-- Imagen principal (z-10 para quedar sobre la forma, pero debajo de iconos) -->
        <div class="col-span-8 flex items-center justify-center z-10">
          <img
            src="/images/fondo-iconos.webp"
            alt="Imagen principal"
            class="w-full h-auto rounded-md shadow-md"
          />
        </div>
      </div>
  
      <!-- 
        =======================
        MÓVIL
        =======================
        Se muestra en pantallas < sm
        Se oculta en escritorio con: sm:hidden
      -->
      <div class="sm:hidden flex flex-col items-center justify-start relative z-10 w-full h-full">
        <!-- Iconos arriba de la imagen -->
        <div class="grid grid-cols-3 gap-4 w-full px-4 mt-4 mb-4">
          <img
            src="/images/icons/ico-alumnos.svg"
            alt="Alumnos"
            class="w-full aspect-square object-contain"
          />
          <img
            src="/images/icons/ico-hectarias.svg"
            alt="Hectáreas"
            class="w-full aspect-square object-contain"
          />
          <img
            src="/images/icons/ico-m3-construidos.svg"
            alt="M3 Construidos"
            class="w-full aspect-square object-contain"
          />
          <img
            src="/images/icons/ico-alumnos-extranjeros.svg"
            alt="Alumnos Extranjeros"
            class="w-full aspect-square object-contain"
          />
          <img
            src="/images/icons/ico-certificados-internacionales.svg"
            alt="Certificados Internacionales"
            class="w-full aspect-square object-contain"
          />
          <!-- Agrega más iconos si lo deseas -->
        </div>
        <!-- Imagen principal debajo de los iconos en móvil -->
        <img
          src="/images/fondo-iconos.webp"
          alt="Imagen principal"
          class="w-full h-auto rounded-md shadow-md"
        />
      </div>
    </div>
  </section>
  

  <!-- Sección 4: Mapa y datos de contacto -->
  <SectionMapa />
</div>
