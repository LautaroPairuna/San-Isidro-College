---
import SectionMapa from "./paginasComponents/sectionMapa.astro";
---

<div id="container">
  <!-- Incluimos el Header con sus elementos interactivos -->

  <!-- Sección 1: Imagen de fondo y texto -->
  <section class="relative w-full h-auto grid grid-cols-12">
    <!-- Columna Izquierda: Texto y botón (z-40) -->
    <div class="col-span-5 flex flex-col justify-center items-start px-16 bg-[#71af8d] relative">
      <div class="absolute top-[55%] left-[80%] transform -translate-x-1/2 z-40">
        <h1 class="titulo-home text-6xl font-black text-white leading-tight">
          I am <br>
          <em class="italic font-medium">because</em> <br>
          we are
        </h1>        
      </div>
    </div>

    <!-- Columna Derecha: Imagen de fondo y botón (z-40) -->
    <div class="col-span-7 relative w-full h-full">
      <img
        src="/images/fondo-home.webp"
        alt="Imagen de fondo"
        class="w-full h-full object-cover"
      />
      <button class="absolute bottom-6 right-6 flex items-center gap-3 px-6 py-3 bg-[#1e804b] text-white rounded-full shadow-lg transition z-40">
        <img src="/images/ico-admisiones.svg" alt="Ver Admisiones" width="32" height="32"> 
        ADMISIONES
      </button>
    </div>
    

    <!-- Figura decorativa -->
    <img
      src="/images/formas/forma-home-1.svg"
      alt="Forma decorativa"
      class="absolute top-0 left-4/12 transform -translate-x-1/2 h-full pointer-events-none"
    />
  </section>

  <!-- Sección 2: Bienvenida -->
  <section class="relative w-full h-auto py-10 bg-white">
    <div class="grid grid-cols-12 gap-8 max-w-screen-xl mx-auto">
      <!-- Columna Izquierda: Texto en recuadro (z-20) -->
      <div class="col-span-4 relative flex flex-col justify-center">
        <div class="bg-white shadow-xl rounded-xl p-8 absolute top-10 left-55 w-[450px] z-20">
          <h2 class="text-2xl font-bold text-gray-900 text-center">
            BIENVENIDOS A SAN ISIDRO
          </h2>
          <p class="mt-4 text-gray-700 leading-relaxed">
            Somos conscientes de que, probablemente, una de las decisiones más importantes
            a la que como padres se enfrentan, es la elección de un Colegio para sus hijos,
            instancia que generará gran impacto en sus vidas. Por ello, es vital tomar la
            decisión correcta.
          </p>
        </div>
        <!-- Línea decorativa -->
        <div class="absolute -top-5 -left-60 w-[550px]">
          <img
            src="/images/formas/forma-home-2.svg"
            alt="Decoración"
            class="w-full h-full"
          />
        </div>
      </div>

      <!-- Columna Derecha: Imagen -->
      <div class="col-span-8">
        <img
          src="/images/fondo-bienvenida.webp"
          alt="Imagen del colegio"
          class="w-full h-auto rounded-xl shadow-lg"
        />
      </div>
    </div>
  </section>

  <!-- Sección 3: Sección de iconos y estadísticas -->
  <section class="relative w-full h-screen bg-[#71af8d] py-5">
    <!-- Imagen decorativa superpuesta (z-10) -->
    <img
      src="/images/formas/forma-home-3.svg"
      alt="Forma decorativa"
      class="absolute top-25 right-15 w-[750px] h-auto z-10"
    />
    <div class="grid grid-cols-12 gap-8 max-w-screen-xl mx-auto h-full px-4">
      <!-- Columna Izquierda: Imagen principal -->
      <div class="col-span-8 flex items-center justify-center">
        <img
          src="/images/fondo-iconos.webp"
          alt="Imagen principal"
          class="w-full h-auto rounded-md shadow-md"
        />
      </div>
      <!-- Columna Derecha: Iconos (z-20) -->
      <div class="absolute col-span-4 flex items-center justify-center z-20 top-[65%] left-[22%]">
        <img
          src="/images/iconos.svg"
          alt="Sección de iconos y estadísticas"
          class="w-[1150px] h-auto"
        />
      </div>
    </div>
  </section>

  <!-- Sección 4: Mapa y datos de contacto -->
  <SectionMapa />
</div>
